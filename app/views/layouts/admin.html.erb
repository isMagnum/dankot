<!DOCTYPE html>
<html>
<head>
  <title>Dankot</title>
  <%= stylesheet_link_tag    'admin/application', media: 'all' %>
  <%= javascript_include_tag 'admin/application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="header clearfix">

    <div>
      <%= link_to "Перейти на сайт", root_path, class: "btn btn-default btn-xs",
            target: "_blank"%>
    </div>
    <div class="main-title"><%= link_to "Панель управления", admin_path %></div>

    <% if current_user%>
      <div class="profile-controls">
        <div><%= link_to "Мой профиль", admin_profile_path %></div>
        <div>
          <%= link_to "Выйти", logout_path, method: :delete,
                class: "btn btn-default btn-xs" %>
        </div>
      </div>
    <% end %>

  </div>

  <hr>

  <% if flash.any? %>
    <%= render 'admin/flash' %>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
