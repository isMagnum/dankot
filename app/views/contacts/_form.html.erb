<% if flash.any? %>
  <%= render 'shared/success_deliver' %>
<% else %>
  <%= form_for @message, url: contacts_path, html: { class: "contacts__feedback" } do |f| %>
    <div class="contacts__title">Обратная связь</div>
    <div class="contacts__input-wrap"><%= f.text_field :name, placeholder: 'Имя', required: true %></div>
    <div class="contacts__input-wrap"><%= f.text_field :email, placeholder: 'E-Mail'%></div>
    <div class="contacts__input-wrap"><%= f.text_field :phone, placeholder: 'Телефон', required: true %></div>
    <div class="contacts__input-wrap"><%= f.text_area :text, placeholder: 'Сообщение'%></div>
    <%= f.submit 'Отправить'%>
  <% end %>
<% end %>
